<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/pg1_container" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_gravity="center">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_margin="8dp">


    <androidx.cardview.widget.CardView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/resultCard" android:layout_margin="8dp" app:cardBackgroundColor="#00FFFFFF" android:layout_marginTop="28dp">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_margin="8dp" android:layout_marginBottom="16dp">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal">

    <ImageView android:layout_height="match_parent" android:layout_width="140dp" android:id="@+id/cardbank_imgview"/>


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/paymentType" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:textStyle="bold" android:textSize="18sp" android:textColor="#000000" android:textAlignment="textStart" android:text="Online Banking" android:fontFamily="@font/cantarell_bold" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/bankName" android:layout_marginTop="0dp" android:layout_marginBottom="8dp" android:textStyle="normal" android:textSize="14sp" android:textColor="#000000" android:textAlignment="textStart" android:text="Bank_Name" android:fontFamily="@font/cantarell" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

</LinearLayout>

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/textView" android:layout_marginTop="28dp" android:layout_marginBottom="8dp" android:textStyle="normal" android:textSize="18sp" android:textColor="#000000" android:textAlignment="textStart" android:text="Payment Summary (RM):" android:fontFamily="@font/cantarell" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/amount" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:textStyle="bold" android:textSize="24sp" android:textColor="#000000" android:textAlignment="center" android:text="RM 20.00" android:fontFamily="@font/cantarell_bold" android:layout_weight="1" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

</LinearLayout>

</androidx.cardview.widget.CardView>

    <Button android:layout_height="67dp" android:layout_width="274dp" android:id="@+id/confirmbtn" android:layout_gravity="bottom|center_horizontal" android:layout_margin="8dp" android:textSize="24sp" android:text="Confirm" android:fontFamily="@font/cantarell_bold" android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:background="@drawable/rounded_btn"/>

</LinearLayout>

</ScrollView>

</LinearLayout>

</RelativeLayout>