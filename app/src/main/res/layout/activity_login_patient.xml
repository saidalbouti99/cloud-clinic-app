<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/cantarell"
        android:text="LOGIN AS PATIENT"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="277dp"
        android:fontFamily="@font/cantarell"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailAddressLoginPatient"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailAddressLoginPatient"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextEmailAddressLoginPatient"
        android:layout_width="321dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="264dp"
        android:fontFamily="@font/cantarell"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPasswordLoginPatient"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddressLoginPatient" />

    <EditText
        android:id="@+id/editTextTextPasswordLoginPatient"
        android:layout_width="321dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btn_login_patient"
        android:layout_width="274dp"
        android:layout_height="67dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/rounded_btn"
        android:fontFamily="@font/cantarell"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password_patient" />

    <TextView
        android:id="@+id/tv_forgot_password_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="202dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cantarell"
        android:text="Forgot Password?"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPasswordLoginPatient"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPasswordLoginPatient"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordLoginPatient" />

    <TextView
        android:id="@+id/tv_signup_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cantarell"
        android:text="Don't have any account yet?"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/btn_login_patient"
        app:layout_constraintStart_toStartOf="@+id/btn_login_patient"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_patient" />

</androidx.constraintlayout.widget.ConstraintLayout>