<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/cantarell"
        android:text="Create an account"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:layout_width="274dp" android:layout_height="67dp" android:id="@+id/btn_signup_patient_signup" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" android:text="Sign Up" android:textSize="24sp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/editTextTextSignupCPasswordPatient" android:background="@drawable/rounded_btn" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName" android:fontFamily="@font/cantarell" android:text="Full Name/As in IC" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextTextPersonName" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Name" android:inputType="textPersonName" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextTextIC" android:fontFamily="@font/cantarell" android:text="IC No." android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextTextIC" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="IC No." android:inputType="number" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextEmailAddressSignupDoctor" android:fontFamily="@font/cantarell" android:text="Email Address" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextTextIC"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextEmailAddressSignupDoctor" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView6" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Email" android:inputType="textEmailAddress" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextPhone" android:fontFamily="@font/cantarell" android:text="Phone No." android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddressSignupDoctor"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextPhone" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Phone No." android:inputType="phone" android:padding="10dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/editTextTextPasswordSignupPatient" android:fontFamily="@font/cantarell" android:text="Password" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextPhone"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextTextPasswordSignupPatient" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView8" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Password" android:inputType="textPassword" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/editTextTextSignupCPasswordPatient" android:fontFamily="@font/cantarell" android:text="Confirm Password" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordSignupPatient"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/editTextTextSignupCPasswordPatient" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView9" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Confirm Password" android:inputType="textPassword" android:padding="10dp" android:textAlignment="textStart"/>

</androidx.constraintlayout.widget.ConstraintLayout>