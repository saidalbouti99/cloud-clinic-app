<?xml version="1.0" encoding="UTF-8"?>

<ScrollView android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/cantarell"
        android:text="Create an account"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_signup_doctor_signup"
        android:layout_width="274dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_btn"
        android:fontFamily="@font/cantarell"
        android:text="Sign Up"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmpassword_doctor_signup" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/et_fullname_doctor_signup" android:fontFamily="@font/cantarell" android:text="Full Name/As in IC" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/et_fullname_doctor_signup" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="Name" android:inputType="textPersonName" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/et_ic_doctor_signup" android:fontFamily="@font/cantarell" android:text="IC No." android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/et_fullname_doctor_signup"/>

    <EditText android:layout_width="343dp" android:layout_height="48dp" android:id="@+id/et_ic_doctor_signup" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/cantarell" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5" android:background="@drawable/rounded_edittxt" android:ems="10" android:hint="IC No." android:inputType="number" android:padding="10dp" android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cantarell"
        android:text="Phone No."
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/et_ic_doctor_signup"
        app:layout_constraintTop_toBottomOf="@+id/et_ic_doctor_signup" />

    <EditText
        android:id="@+id/et_phone_nofortac"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Phone No."
        android:inputType="phone"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <TextView
        android:id="@+id/textView99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cantarell"
        android:text="Hospital/Clinic"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/et_clinic_doctor_signup"
        app:layout_constraintTop_toBottomOf="@+id/et_phone_nofortac" />

    <EditText
        android:id="@+id/et_clinic_doctor_signup"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Clinic Name"
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView99" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cantarell"
        android:text="Email Address"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/et_email_doctor_signup"
        app:layout_constraintTop_toBottomOf="@+id/et_clinic_doctor_signup" />

    <EditText
        android:id="@+id/et_email_doctor_signup"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cantarell"
        android:text="Password"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/et_password_doctor_signup"
        app:layout_constraintTop_toBottomOf="@+id/et_email_doctor_signup" />

    <EditText
        android:id="@+id/et_password_doctor_signup"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/et_confirmpassword_doctor_signup" android:fontFamily="@font/cantarell" android:text="Confirm Password" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/et_password_doctor_signup"/>

    <EditText
        android:id="@+id/et_confirmpassword_doctor_signup"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittxt"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>