<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_edit_profile_doctor"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="254dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:background="#fff"
        android:fontFamily="@font/cantarell"
        android:padding="8dp"
        android:text="Edit Profile"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/btn_changepassword_doctor"
        android:layout_width="254dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:fontFamily="@font/cantarell"
        android:text="Change Password"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile_doctor" />

    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/btn_logout_doctor"
        android:layout_width="254dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:fontFamily="@font/cantarell"
        android:text="Logout"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_changepassword_doctor" />
</androidx.constraintlayout.widget.ConstraintLayout>
